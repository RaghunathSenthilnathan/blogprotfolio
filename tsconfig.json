{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@pages/*": ["./pages/*"],
      "@components/*": ["./pages/components/*"],
      "@constants/*": ["./pages/constants/*"],
      "@assets/*": ["./pages/assets/*"],
      "@lib/*": ["./pages/lib/*"],
      "@styles/*": ["./pages/styles/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "pages/index.js",
    "pages/_document.js",
    "pages/_app.js"
  ],
  "exclude": ["node_modules"]
}
